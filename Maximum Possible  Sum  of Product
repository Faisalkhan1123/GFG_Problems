#include <iostream>

#include<algorithm>
using namespace std;

int main() {
	//code
   int t;
   cin>>t;
   while(t--){
       
   int n;
   cin>>n;
   int A[n],B[n];
   
  
       for(int i=0; i<n; i++)
           cin>>A[i];
       
       
       for(int i=0; i<n; i++)
           cin>>B[i];
       
       sort(A,A+n);
       sort(B,B+n);
       int sum=0;
       for(int i=0; i<n; i++)
           sum+=A[i]*B[i];
           
       
       cout<<sum<<endl;
   }
	return 0;
}
